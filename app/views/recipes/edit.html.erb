<div class="foods-sell-contents">
  <header class="foods-sell-header">
    <%= link_to image_tag('logo1.jpg' , size: '185x50'), "/" %>

  </header>

  <div class="foods-sell-main">
    <div class = "foods-sell-title">
      <h2 class="foods-sell-title1">レシピ情報を投稿</h2>
    </div>
    <%= form_with model: @recipe, url: recipe_path(@recipe.id), local: true do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

      <%# 食品画像 %>
      <div class="img-upload">
        <label class="weight-text">レシピの画像</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"food-image" %>
      </div>
      <%# /食品画像 %>

      <%# 食品詳細 %>
      <div class="foods-name">
        <label class="weight-text">レシピ名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, size: "30x1", id:"food-name", placeholder:"食品名（30文字まで)", maxlength:"40", class:"input-default" %>
      <div class="foods-name">
        <label class="weight-text">材料</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :food_text, size: "30x6", id:"food-name", placeholder:"材料を入力しよう！", class:"input-default" %>
      <div class="foods-name">
        <label class="weight-text">作り方</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :recipe_text, size: "30x15", id:"food-name", placeholder:"作り方を入力しよう！", class:"input-default" %>
      <%# /商品名と商品説明 %>

      <%# 下部ボタン %>
      <div class="sell-btn-contents">
        <%= f.submit "編集する", class:"sell-btn" %>
        <%=link_to 'もどる', recipe_path, class:"back-btn" %>
      </div>
      <%# /下部ボタン %>
    <% end %>
  </div>

  <footer class="foods-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">Seaweed利用規約</a></li>
    </ul>
    <%= link_to image_tag('logo1.jpg' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Seaweed,Inc.
    </p>
  </footer>
</div>